{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2020": true
    },
    "plugins": ["prettier"],
    "extends": [
        "prettier",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "func-names": ["error", "as-needed"],
        "no-underscore-dangle": ["error", { "allow": ["_id"] }],
        "quotes":["error","single"],
        "operator-linebreak": ["error", "after"]
    }
}
